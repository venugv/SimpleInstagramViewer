<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        cardElevation="8dp"
        cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/cardBg">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <ImageView
                android:id="@+id/userProfile"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:src="@color/imagePlaceholder" />

            <TextView
                android:id="@+id/personName"
                style="@android:style/TextAppearance.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/userProfile"
                android:text="Person Name"
                android:textColor="@color/usernameBg"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/elapsedTime"
                style="@android:style/TextAppearance.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="5dp"
                android:text="24m" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="20dp"
                android:layout_toLeftOf="@id/elapsedTime"
                android:src="@drawable/ic_timeline" />

            <FrameLayout
                android:id="@+id/previewLayout"
                android:layout_below="@+id/userProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foregroundGravity="center">

                <ImageView
                    android:id="@+id/previewPic"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_below="@+id/userProfile" />

                <ImageView
                    android:id="@+id/playButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/imagePlaceholder"
                    android:src="@drawable/ic_play"
                    android:visibility="gone" />
            </FrameLayout>

            <TextView
                android:id="@+id/imageCaption"
                style="@android:style/TextAppearance.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/previewLayout"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:singleLine="false"
                android:text="@string/long_string"
                android:textColor="@color/captionBg" />

            <ImageView
                android:id="@+id/likeImg"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/imageCaption"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_like" />

            <TextView
                android:id="@+id/likeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageCaption"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/likeImg"
                android:text="123 likes"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="12sp" />

            <include
                android:id="@+id/firstLike"
                layout="@layout/comment_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/likeImg"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="8dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>